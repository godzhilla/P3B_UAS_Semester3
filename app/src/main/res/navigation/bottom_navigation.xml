<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/destinationFragment">

    <fragment
        android:id="@+id/destinationFragment"
        android:name="com.example.p3buassemester3.user.DestinationFragment"
        android:label="fragment_destination"
        tools:layout="@layout/fragment_destination" >
        <action
            android:id="@+id/action_destinationFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
    </fragment>
    <fragment
        android:id="@+id/riwayatPemesananFragment"
        android:name="com.example.p3buassemester3.user.RiwayatPemesananFragment"
        android:label="fragment_riwayat_pemesanan"
        tools:layout="@layout/fragment_riwayat_pemesanan" >
        <action
            android:id="@+id/action_riwayatPemesananFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.p3buassemester3.user.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.p3buassemester3.user.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.p3buassemester3.user.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
</navigation>