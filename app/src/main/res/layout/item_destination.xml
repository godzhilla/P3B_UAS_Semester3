<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/container_rounded"
    android:layout_marginBottom="20dp"
    android:id="@+id/container_item_destination">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/borobudur"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/image_destination"
        android:background="@drawable/container_rounded"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borobudur"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/darker_blue"
        app:layout_constraintStart_toEndOf="@id/image_destination"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_name_destination"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txt_name_destination"
        android:text="Borobudur, massive Buddhist monument in central Java, Indonesia, 26 miles (42 km) northwest of Yogyakarta."
        app:layout_constraintTop_toBottomOf="@id/txt_name_destination"
        android:id="@+id/txt_desc_destination"
        android:textSize="18sp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintStart_toStartOf="@id/txt_desc_destination"
        app:layout_constraintTop_toBottomOf="@id/txt_desc_destination"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_favorite"/>


</androidx.constraintlayout.widget.ConstraintLayout>